{% extends 'base_back.html.twig' %}

{% block title %}Editar Usuarios{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <h2 class=" fs-3 py-5">Editando un usuario</h2>
            </div>
        </div>
    </div>

    {{ form_start(form) }}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4 mt-3 mb-5">
                {{ form_label(form.nom, 'Nombre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>
            <div class="col-md-4 mt-3 mb-5">
                {{ form_label(form.cognom, 'Apellido', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.cognom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.cognom) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4 mt-3 mb-5">
                {{ form_label(form.nom_usuari, 'Nombre de Usuario', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom_usuari, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom_usuari) }}
            </div>
            <div class="col-md-4 mt-3 mb-5">
                {{ form_label(form.contrasenya, 'Contraseña', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.contrasenya, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.contrasenya) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4 mt-3 mb-5">
                {{ form_label(form.correu, 'Correo Electrónico', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.correu, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.correu) }}
            </div>
            <div class="col-md-4 mt-3 mb-5">
                {{ form_label(form.rols, 'Roles', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.rols, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.rols) }}
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center my-5">
                    <a href="{{ path('app_usuaris_index') }}" class="btn btn-danger">Volver atrás</a>
                    <button type="submit" class="btn btn-success mt-3">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
