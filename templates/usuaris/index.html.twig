{% extends 'base_back.html.twig' %}

{% block title %}Gestió d'Usuaris{% endblock %}

{% block body %}
    <h1>Gestió d'Usuaris</h1>

    <a href="{{ path('app_usuaris_new') }}" class="btn btn-primary">Nou Usuari</a>

    <h2>Administradors</h2>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Cognom</th>
            <th>Rol</th>
            <th>Accions</th>
        </tr>
        </thead>
        <tbody>
        {% for administrador in administradors %}
            <tr>
                <td>{{ administrador.id }}</td>
                <td>{{ administrador.nom }}</td>
                <td>{{ administrador.cognom }}</td>
                <td>Administrador</td>
                <td>
                    <a href="{{ path('app_usuaris_edit', { id: administrador.id }) }}" class="btn btn-warning">Editar</a>
                    <a href="{{ path('app_usuaris_show', { id: administrador.id }) }}" class="btn btn-info">Veure Detalls</a>
                    <form action="{{ path('app_usuaris_delete', { id: administrador.id }) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger" onclick="return confirm('Estàs segur?')">Eliminar</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Treballadors</h2>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Cognom</th>
            <th>Rol</th>
            <th>Accions</th>
        </tr>
        </thead>
        <tbody>
        {% for treballador in treballadors %}
            <tr>
                <td>{{ treballador.id }}</td>
                <td>{{ treballador.nom }}</td>
                <td>{{ treballador.cognom }}</td>
                <td>Treballador</td>
                <td>Treballador</td>
                <td>
                    <a href="{{ path('app_usuaris_edit', { id: treballador.id }) }}" class="btn btn-warning">Editar</a>
                    <a href="{{ path('app_usuaris_show', { id: treballador.id }) }}" class="btn btn-info">Veure Detalls</a>
                    <form action="{{ path('app_usuaris_delete', { id: treballador.id }) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger" onclick="return confirm('Estàs segur?')">Eliminar</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


