{% extends 'base.html.twig' %}

{% block title %}Datos{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <h2 class=" fs-3 py-5">Datos de compra</h2>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center">
        <div class="row">
            <div class="col-12">
                <div class="container">
                    <form method="post" novalidate>
                        <div class="mb-3">
                            <label for="nom" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nom" name="nom" required pattern="^[a-zA-ZáéíóúÁÉÍÓÚñÑ\s]+$" maxlength="50">
                            <div class="invalid-feedback">
                                Por favor, introduce un nombre válido (solo letras y espacios, máx. 50 caracteres).
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="cognom" class="form-label">Apellido</label>
                            <input type="text" class="form-control" id="cognom" name="cognom" required pattern="^[a-zA-ZáéíóúÁÉÍÓÚñÑ\s]+$" maxlength="50">
                            <div class="invalid-feedback">
                                Por favor, introduce un apellido válido (solo letras y espacios, máx. 50 caracteres).
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="telef" class="form-label">Teléfono</label>
                            <input type="text" class="form-control" id="telef" name="telef" pattern="^\d{9}$">
                            <div class="invalid-feedback">
                                Introduce un número de teléfono válido (9 dígitos).
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="direccio" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="direccio" name="direccio" maxlength="100">
                            <div class="invalid-feedback">
                                La dirección no puede exceder los 100 caracteres.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="num_tarj" class="form-label">Número de Tarjeta</label>
                            <input type="text" class="form-control" id="num_tarj" name="num_tarj" pattern="^\d{16}$">
                            <div class="invalid-feedback">
                                Introduce un número de tarjeta válido (16 dígitos).
                            </div>
                        </div>

                        <div class="d-flex justify-content-center mt-5">
                            <button type="submit" class="btn btn-rosa">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
