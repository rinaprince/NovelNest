<header>
    <nav class="bg-blau-back border-bottom py-2 border-bottom border-black">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            {% if app.user %}
                <span class="text-dark pe-5">{{ app.user.getNomUsuari() }}</span>
            {% endif %}
            <div class="d-flex justify-content-center flex-grow-1">
                <h1 class="text-blau">NovelNest</h1>
            </div>
            {% if app.user and (is_granted('ROLE_ADMIN') or is_granted('ROLE_TREBALLADOR')) %}
                <a class="btn text-white" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right fs-5"></i> Salir</a>
            {% endif %}
        </div>
    </nav>
</header>