{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center py-5">
        <div class="row">
            <div class="col-12">
                <h2 class="fs-3 pt-5 pb-2">Inicio de sesión</h2>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center">
        <div class="row">
            <div class="col-12">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('app_login') }}" method="post">
                    <label for="username" class="mb-4"><strong>Nombre de usuario:</strong></label>
                    <input class="form-control" type="text" id="username" name="_username"
                           value="{{ last_username }}"><br>

                    <label for="password" class="mb-4"><strong>Contraseña:</strong></label>
                    <input class="form-control" type="password" id="password" name="_password"> <br>

                    <button type="submit" class="btn btn-blau">Entrar</button>
                </form>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center py-5">
        <div class="row">
            <div class="col-12">
                <a href="#" class="mt-5">¿No tienes una cuenta? ¡Regístrate aquí!</a>
            </div>
        </div>
    </div>
{% endblock %}
