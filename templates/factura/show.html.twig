{% extends 'base_back.html.twig' %}

{% block title %}Mostrar Facturas{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <h2 class=" fs-3 py-5">Viendo una factura</h2>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center text-center">
        <div class="row">
            <div class="col-12">
                <table class="table table-hover">
                    <tbody>
                    <tr class="d-none">
                        <th>Id</th>
                        <td>{{ factura.id }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Número de la factura</th>
                        <td>{{ factura.numFactura }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Nombre</th>
                        <td>{{ factura.client.nom }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Apellido</th>
                        <td>{{ factura.client.cognom }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Seudónimo</th>
                        <td>
                            {% if factura.client %}
                                {{ factura.client.pseudonim }}
                            {% else %}
                                <span class="text-danger">Sin cliente</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th class="table-warning">Tipo</th>
                        <td>{{ factura.tipus }}</td>
                    </tr>
                    {% for obra in factura.obres %}
                        <tr>
                            <th class="table-warning">Título</th>
                            <td>{{ obra.nom }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">No hay obras asociadas a esta factura.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center pt-5">
        <div class="row">
            <div class="col-12">
                <a class="btn btn-rosa" href="{{ path('app_factura_index') }}">Volver</a>
            </div>
        </div>
    </div>

    <!--{{ include('factura/_delete_form.html.twig') }}-->
{% endblock %}
