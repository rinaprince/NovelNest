{% extends 'base_back.html.twig' %}

{% block title %}Mostrar Usuario{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <h2 class=" fs-3 py-5">Viendo un usuario</h2>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center text-center">
        <div class="row">
            <div class="col-12">
                <table class="table table-hover">
                    <tbody>
                    <tr class="d-none">
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Nombre de usuario</th>
                        <td>{{ user.nomUsuari }}</td>
                    </tr>
                    <tr class="d-none">
                        <th>Contrasenya</th>
                        <td>{{ user.contrasenya }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Nombre</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Apellido</th>
                        <td>{{ user.cognom }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Correo</th>
                        <td>{{ user.correu }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Roles</th>
                        <td>{{ user.rols ? user.rols|join(', ') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center pt-5">
        <div class="row">
            <div class="col-12">
                <a class="btn btn-rosa" href="{{ path('app_user_index') }}">Volver</a>
            </div>
        </div>
    </div>

{% endblock %}
