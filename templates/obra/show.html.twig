{% extends 'base_back.html.twig' %}

{% block title %}Detalles de una Obra{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <h2 class=" fs-3 py-5">Viendo una obra</h2>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center text-center">
        <div class="row">
            <div class="col-12">
                <table class="table table-hover">
                    <tbody>
                    <tr class="d-none">
                        <th>Id</th>
                        <td>{{ obra.id }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Título</th>
                        <td>{{ obra.nom }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Tipo de obra</th>
                        <td>{{ obra.tipus }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Número de seguimiento de la obra</th>
                        <td>{{ obra.numObraSeguiment }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Estado</th>
                        <td>{{ obra.estat ? 'Entregado' : 'No entregado' }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Portada</th>
                        <td>{{ obra.portada }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Arxiu</th>
                        <td>{{ obra.urlArxiu.arxiuPdf }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center pt-5">
        <div class="row">
            <div class="col-12">
                <a class="btn btn-rosa" href="{{ path('app_obra_index') }}">Volver</a>
            </div>
        </div>
    </div>

    <!--{{ include('obra/_delete_form.html.twig') }}-->
{% endblock %}
