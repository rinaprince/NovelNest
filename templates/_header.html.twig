<header>
    <nav class="navbar navbar-expand-lg bg-blau border-bottom border-black">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <h1 class="text-logo">NovelNest</h1>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse ms-5" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'app_home' ? 'active' : '' }}"
                           aria-current="page" href="{{ path('app_home') }}">Página principal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'app_contacte' ? 'active' : '' }}"
                           href="{{ path('app_contacte') }}">Contacto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'app_autopublicacio' ? 'active' : '' }}" href="{{ path('app_autopublicacio') }}">Autopublicación</a>
                    </li>
                    <li class="nav-item {{ app.request.attributes.get('_route') == 'app_biblioteca' ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('app_biblioteca') }}">Biblioteca</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'app_editors' ? 'active' : '' }}"
                           href="{{ path('app_editors') }}">Editores y editoras</a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="btn btn-dark rounded-circle" href="{{ path('app_carrito') }}"> <i class="bi bi-cart-fill"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="me-5">
                {% if app.user %}
                    {% if is_granted('ROLE_TREBALLADOR') %}
                        <a class="btn btn-outline-dark" href="{{ path('app_home_back') }}"><i class="bi bi-gear-fill fs-5"></i> Administración</a>
                    {% elseif is_granted('ROLE_CLIENT') %}
                        <a class="btn btn-outline-dark" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right fs-5"></i> Salir</a>
                    {% endif %}
                {% else %}
                    <a class="btn btn-outline-dark" href="{{ path('app_login') }}"><i class="bi bi-person-circle"></i> Acceder</a>
                {% endif %}
            </div>
        </div>
    </nav>
</header>
