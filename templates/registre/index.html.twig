{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <h2 class=" fs-3 py-5">Registro de usuarios</h2>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
            <form action="{{ path('app_registre') }}" method="POST">
                <div class="col-12 d-flex justify-content-center mb-5">
                    <div class="form-group pe-5">
                        <label for="nom_usuari">Nombre de usuario</label>
                        <input type="text" id="nom_usuari" name="nom_usuari" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="contrasenya">Contraseña</label>
                        <input type="password" id="contrasenya" name="contrasenya" class="form-control" required>
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-center mb-5">
                    <div class="form-group pe-5">
                        <label for="nom">Nombre</label>
                        <input type="text" id="nom" name="nom" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="cognom">Apellido</label>
                        <input type="text" id="cognom" name="cognom" class="form-control" required>
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-center mb-5">
                    <div class="form-group pe-5">
                        <label for="correu">Correo</label>
                        <input type="email" id="correu" name="correu" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="telef">Teléfono</label>
                        <input type="text" id="telef" name="telef" class="form-control" required>
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-center mb-5">
                    <div class="form-group pe-5">
                        <label for="direccio">Dirección</label>
                        <input type="text" id="direccio" name="direccio" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="num_tarj">Número de Targeta</label>
                        <input type="text" id="num_tarj" name="num_tarj" class="form-control" required>
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-center mb-5">
                    <div class="form-group">
                        <label for="pseudonim">Seudónimo</label>
                        <input type="text" id="pseudonim" name="pseudonim" class="form-control" required>
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-center mt-5 pt-5">
                    <a class="btn btn-rosa me-5" href="{{ path('app_login') }}">Volver</a>
                    <button type="submit" class="btn btn-blau">Registro</button>
                </div>
            </form>
            </div>
        </div>
    </div>
{% endblock %}
