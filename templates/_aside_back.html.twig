<aside class="col-2 bg-blau border-end border-black aside">
    <h5 class="pt-4 text-center fw-bold">Panel de gestión</h5>
    <ul class="p-3 aside-list">
        <li class="pb-3 {{ app.request.attributes.get('_route') == 'app_home_back' ? 'active' : '' }}">
            <i class="bi bi-house"></i>
            <a href="{{ path('app_home_back') }}"
               class="link-dark link-offset-3 link-underline-opacity-0 link-underline-opacity-100-hover">
                Página principal
            </a>
        </li>
        {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
            <li class="pb-3 {{ app.request.attributes.get('_route') == 'app_user_index' ? 'active' : '' }}">
                <i class="bi bi-people"></i>
                <a href="{{ path('app_user_index') }}"
                   class="link-dark link-offset-3 link-underline-opacity-0 link-underline-opacity-100-hover">
                    Usuarios
                </a>
            </li>
        {% endif %}
        <li class="pb-3 {{ app.request.attributes.get('_route') == 'app_client_index' ? 'active' : '' }}">
            <i class="bi bi-basket2"></i>
            <a href="{{ path('app_client_index') }}"
               class="link-dark link-offset-3 link-underline-opacity-0 link-underline-opacity-100-hover">
                Clientes
            </a>
        </li>
        <li class="pb-3 {{ app.request.attributes.get('_route') == 'app_obra_index' ? 'active' : '' }}">
            <i class="bi bi-book-half"></i>
            <a href="{{ path('app_obra_index') }}"
               class="link-dark link-offset-3 link-underline-opacity-0 link-underline-opacity-100-hover">
                Obras
            </a>
        </li>
        <li class="pb-3 {{ app.request.attributes.get('_route') == 'app_factura_index' ? 'active' : '' }}">
            <i class="bi bi-receipt"></i>
            <a href="{{ path('app_factura_index') }}"
               class="link-dark link-offset-3 link-underline-opacity-0 link-underline-opacity-100-hover">
                Facturas
            </a>
        </li>
        {% if app.user and 'ROLE_TREBALLADOR' in app.user.roles %}
            <li class="pb-3 {{ app.request.attributes.get('_route') == 'app_autopublicacio' ? 'active' : '' }}">
                <i class="bi bi-vector-pen"></i>
                <a href="{{ path('app_autopublicacio') }}"
                   class="link-dark link-offset-3 link-underline-opacity-0 link-underline-opacity-100-hover">
                    Autopublicació
                </a>
            </li>
        {% endif %}
    </ul>
</aside>
